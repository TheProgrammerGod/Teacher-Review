<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="42dp"
    tools:context=".ui.fragments.LoginScreen">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/image_login_page" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextViewWhite_20sp_New"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:text="LOGIN"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Email ID"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/icon_mail">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Password"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/icon_lock">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTextPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLoginButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/blueNew"
        app:cardCornerRadius="24dp">

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextViewWhite_20sp_New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="80dp"
            android:paddingTop="8dp"
            android:paddingEnd="80dp"
            android:paddingBottom="8dp"
            android:text="LOGIN" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextViewWhite_16sp_New"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Or, login with..." />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGoogleLogin"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/icon_white_background_stroked"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_google" />

        <ImageView
            android:id="@+id/ivFacebookLogin"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/icon_white_background_stroked"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_facebook" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/icon_white_background_stroked"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_google" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>